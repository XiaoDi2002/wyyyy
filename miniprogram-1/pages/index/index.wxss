.banners{
 width: 100%;
 height: 300rpx;
}
.banners image{
  height: 100%;
  width: 100%;
}
.navContainer{
  display: flex;
  justify-content: space-between;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.iconfont{
height: 100rpx;
width: 100rpx;
background-color: #d43c33;
border-radius: 50%;
text-align: center;
line-height: 100rpx;
font-size: 50rpx;
color: white;
margin: 20rpx 0;
}
.navItem  text:nth-child(2){
  font-size: 26rpx;
}
.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header .title{
  font-size: 26rpx;
  color: #666;
  line-height: 80rpx;

}
.recommendContainer .header .more{
  float: right;
  border: 1rpx solid black;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  
}
.scrollItem{
  width: 200rpx;

}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommendScroll{
  display: flex;
  height: 280rpx;
}
.scrollItem{
  margin: 0 10rpx;

}
.scrollItem text{
  display: -webkit-box;
  font-size: 26rpx;
 overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.topList .more{
  float: right;
  border: 1rpx solid black;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  
}
.topList .header{
  padding: 20rpx ;
}
.topList .header .title{
  font-size: 26rpx;
  color: #666;
  line-height: 80rpx;

}
.topListSwiper{
  height: 450rpx;
}
.topListItem{
  width: 96%;
  background-color: #fbfbfb;
}
.topListItem{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  /* 当父元素设置成dlayflex 子元素自动变成行内块 不独占一行 可以改样式 */
}
.musicItem image{
height: 100rpx;
width: 100rpx;
margin-bottom: 20rpx;
border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicItem .musicName{
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;

}

