/* pages/video/index.wxss */
.videoContainer .header{
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
}
.videoContainer .header image{
    width: 60rpx;
   height: 60rpx;
}
.videoContainer .header .search{ 
    border: 3rpx solid rgb(220, 220, 220);
    /*设置flex是1 自动拉伸盒子占满父盒子 */
    flex: 1;
    margin: 0 20rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
    border-radius: 20rpx;
    font-size: 30rpx;
    opacity: 0.7;

}
.navscroll{
    display: flex;
    height: 100rpx;
    /* 不让文字换行 */
    white-space: nowrap;
}
.navscroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navscroll .navItem .active{
    border-bottom:3rpx solid #d43c33 ;
}

.videoItem {
    padding: 0 3%
}
.videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.videoItem image{
    width: 100%;
    height: 360rpx;
    border-radius: 20rpx;
  }
.videoItem .videoScrollheader{
    width: 100%;
    height: 100rpx;
    display: flex;
 align-items: center;
}
.videoItem .videoScrollheader image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 100rpx;
    border: #cacaca;
}
.videoItem .videoScrollheader view{
    font-size: 20rpx;
    margin-left: 30rpx;
  
  
}
.videoScroll .videoScrolltitle{
    font-size: 30rpx;
}
::-webkit-scrollbar {
    display: none;
  }